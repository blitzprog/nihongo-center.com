@require "styles/config.styl"

label
	float left
	padding-left 0em
	padding-right 0em
	padding-top 0.5em
	padding-bottom 0.5em
	width "calc(100% - %s)" % (@padding-left * 2)

input
select
button
	float left
	padding 0.5em
	width "calc(100% - %s)" % (@padding * 2)
	font-size 1em
	border 1px solid rgba(0, 0, 0, 0.35)
	border-radius 3px
	color black
	background rgb(255, 255, 255)
	shadow()
	
input:focus
select:focus
button:focus
	border 1px solid red
	
input:disabled
	background rgba(224, 224, 224, 1)