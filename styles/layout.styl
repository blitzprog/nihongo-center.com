@require "styles/config.styl"

#container
#header-container
#content-container
h2
form
	container-element()

#container
	text-align center

space = 1em

#header, #content
	float left
	padding space
	width "calc(100% - %s)" % (@padding * 2)
	
#header
	padding-bottom space * 0.5
	border-bottom 1px dashed mainColor
	text-align center
	
#content
	width 60%
	display inline-block
	float none
	text-align left
	padding-top space * 0.5
	
#title
	display none
	float left
	margin-bottom 0.25em
	
#navigation
	display inline-block
	
	header
		display none

.navigation-button
	float left
	font-size 1.2em
	padding 0.5em 1.0em

.navigation-button
	display inline-block
	
.navigation-link
	float left