@require "styles/config.styl"

borderRadius = 3px

#navigation
	box-shadow 1px 1px 8px rgba(0, 0, 0, 0.5)

.navigation-button
	color rgb(248, 248, 248)
	background elementBgColor
	text-transform uppercase
	letter-spacing 1px
	transition all 400ms ease
	
.navigation-link:first-of-type .navigation-button
	border-top-left-radius borderRadius
	border-bottom-left-radius borderRadius
	
.navigation-link:last-of-type .navigation-button
	border-top-right-radius borderRadius
	border-bottom-right-radius borderRadius
	
a:hover .navigation-button
	color rgb(255, 255, 255)
	text-shadow 1px 1px 8px rgba(255, 255, 255, 0.3)
	background lighten(elementBgColor, 8%)
	
a.active .navigation-button
	background darken(elementBgColor, 20%)