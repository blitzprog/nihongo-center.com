html
	height 100%

body
	overflow-y scroll
	background-image url(/images/login-bg.jpg)
	background-size cover
	background-position center center
	background-repeat no-repeat
	height 100%

.navigation-link
	font-size 1.3em

.login
	float left
	position relative
	top 44%
	left 50%
	transform translate(-50%, -50%)

.logo
	float left

.auth-options
	float left
	margin-left 32px
	margin-top 20px

.auth-options a
	float left
	margin-top 12px
	
	:hover
		box-shadow 0 0 8px rgba(255, 255, 255, 0.8)
		
	img
		border-radius 4px

#content
	padding-top 70px

