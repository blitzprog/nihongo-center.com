html
	height 100%

body
	overflow-y scroll
	background-image url(/images/login-bg.jpg)
	background-size cover
	background-position center center
	background-repeat no-repeat
	height 100%

label:after
	content ":"

label:first-letter
	text-transform uppercase

.navigation-link
	font-size 1.3em

.login
	float left
	position relative
	top 44%
	left 50%
	transform translate(-50%, -50%)

.logo
	float left

.auth-options
	float left
	margin-left 32px
	margin-top 20px

.auth-options a
	float left
	margin-top 12px

	:hover
		box-shadow 0 0 8px rgba(255, 255, 255, 0.8)

	img
		border-radius 4px

#content
	//

.panel-heading
	.glyphicon
		margin-right 0.25em

.glyphicon
	font-size 0.9em

span.glyphicon
	margin-right 0.25em

a
	transition all 150ms ease

	&:active
		transform translateY(3px)

.navbar
	background navBGColor
	border-radius 0 !important

	a
		color navLinkColor
		opacity 0.5
		background transparent !important

	a:hover, a:focus, a:active
		color navLinkColor
		text-shadow 0 0 8px alpha(navLinkHoverColor, 20%)
		opacity 0.85

	.active
		color navLinkActiveColor !important
		text-shadow 0 0 8px alpha(navLinkActiveColor, 30%)
		opacity 1.0 !important

.viewed-by
	width 100%
	background-color navBGColor - 10%
	color rgba(255, 255, 255, 0.5)

	.viewer, .viewed
		color rgba(255, 255, 255, 1.0)

@media screen and (min-width: 774px)
	.navbar
		position fixed !important
		top 0
		left 0
		z-index 9999
		width 100%

	#content-container
		margin-top 20px + 50px

