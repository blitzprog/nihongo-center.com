@require "styles/config.styl"

html, body, *
	font-family "Ubuntu"
	background linear-gradient(to right, sidePanelColor 0%, sidePanelColor 20%, bgColor 20%, bgColor 80%, sidePanelColor 80%, sidePanelColor 100%)

html
	overflow-y scroll

body
	color textColor
	background-color bgColor

#title
	font-size 2em

a
a:visited
	text-decoration none
	color linkColor
	
a:focus
a:hover
	color lighten(linkColor, 30%)

h2
h3
p
	container-element()
	padding 0.4em 0

h2
	font-size 1.8em
	line-height 1.8em
	color lighten(elementBgColor, 95%)
	border 1px solid darken(elementBgColor, 30%)
	box-sizing border-box
	background elementBgColor
	text-align center
	letter-spacing 2px
	border-radius 5px
	margin 0.4em 0
	box-shadow 1px 1px 8px rgba(0, 0, 0, 0.5)
	
	:first-child
		padding 0
	
h3
	font-size 1.3em
	line-height 1.3em
	
strong
	font-weight bold