mainColor = rgb(108, 169, 44)
textColor = rgb(16, 16, 16)

html, body, *
    font-family "Ubuntu"

body
    color textColor
    background-color lighten(mainColor, 90%)

#title
    font-size 2em

a
    text-decoration none
    color mainColor
    
    :hover
        color lighten(mainColor, 30%)

h2
    float left
    width 100%
    font-size 1.5em
    line-height 1.5em