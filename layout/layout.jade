doctype html
html(lang="en")
	head
		title= siteName
		meta(name="viewport", content="width=device-width, initial-scale=1")
		style!= css
	
	body
		#container
			#header-container
				#header
					#title
						h1
							a(href="/")= siteName
					
					nav#navigation
						header
							h2 Navigation
						
						- var loggedInPages = ["dashboard", "profile", "uploads"]
						- var loggedOutPages = ["login"]
						each nav in pages
							if nav.visible
								if (!user && loggedOutPages.indexOf(nav.id) !== -1) || (user && loggedInPages.indexOf(nav.id) !== -1)
									a.navigation-link.ajax(href="/#{nav.url}")
										.navigation-button= nav.title
			
			#content-container
				section#content!= content
			
			#loading-animation.spinner
			
		script!= js