.profile
	width 100%
	display flex
	flex-direction row
	flex-wrap wrap

.field
	float left
	padding 0.5em
	width "calc(33.3% - %s)" % (@padding * 2)
	
@media only screen and (max-width: 600px)
	.field
		padding 0.5em
		width "calc(100% - %s)" % (@padding * 2)
		
@media only screen and (max-width: 1100px)
	.field
		padding 0.5em
		width "calc(50% - %s)" % (@padding * 2)

.family-member
	margin 0.5em 0
	border 1px dashed rgba(0, 0, 0, 0.25)
	border-radius 3px

.delete-button
	padding 0.5em

label
	float left
	padding-left 0em
	padding-right 0em
	padding-top 0.5em
	padding-bottom 0.5em
	width "calc(100% - %s)" % (@padding-left * 2)

input
select
	float left
	padding 0.5em
	width "calc(100% - %s)" % (@padding * 2)
	font-size 1em
	border 1px solid rgba(0, 0, 0, 0.25)
	border-radius 3px
	color black
	background rgba(255, 255, 255, 1)
	
input:focus
select:focus
	border 1px solid red