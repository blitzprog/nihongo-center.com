//@require "styles/config.styl"

.profile
	width 100%
	display flex
	flex-direction row
	flex-wrap wrap

.field
	float left
	padding 0.5em
	width 33%
	line-height 1.4em
	box-sizing border-box

.buttons
	display flex
	justify-content center
	align-items center

button
	flex 1
	font-size 1.15em !important

.totalAmount
	width 100%
	font-size 115%

@media only screen and (max-width: 600px)
	.field
		width 100%

@media only screen and (max-width: 1100px)
	.field
		width 50%

.array-element
	margin 0.5em 0
	border 1px dashed rgba(0, 0, 0, 0.25)
	border-radius 3px
	position relative
	shadow()

.delete-button
	position absolute
	bottom 5px
	right 5px