if !user
	p= __("error.notLoggedIn")
else
	.page-header
		h1= __("courses")
		
	each monthList, year in courses
		.page-header
			h2= year
		
		.row
			.col-sm-6
				each studentList, month in monthList
					h3= __("monthNames." + month)
					
					each student in studentList
						p
							a(href=`/students/${student.email}`)= student.givenName + " " + student.familyName