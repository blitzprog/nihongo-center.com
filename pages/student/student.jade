mixin display(key, cssClass)
	tr(class=cssClass)
		td(style="width: 30%")= humanized[key]
		if student[key] && typeof translateOptions[key] !== "undefined"
			td!= __(`options.${key}.${student[key]}`)
		else
			td= student[key]

if !user
	p= __("error.notLoggedIn")
else if user.accessLevel !== "admin" && user.accessLevel !== "staff"
	p= __("error.notAuthorized")
else if !student
	p= __("error.studentDoesntExist")
else
	.page-header
		h1
			span.glyphicon.glyphicon-user(style="margin-right: 0.25em")
			span= student.displayName
	
	script
		include save.js
	
	.row
		.col-sm-8
			//- Summary
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-info-sign(style="margin-right: 0.25em")
					span= __("summary")
				.panel-body
					p!= description
			
			//- Uploads
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-upload(style="margin-right: 0.25em")
					span= __("uploads")
				.panel-body
					if student.uploads.length === 0
						.alert.alert-danger The student did not upload any files yet!
					else
						ul.list-group
							each upload in student.uploads
								li.upload-item.list-group-item
									a(href="/" + upload.path)= upload.purposeHumanized
									span.upload-original-name= ` (${upload.originalname})`
									
									if upload.extension
										span.label.label-default(style="float: right")= upload.extension.toLowerCase()
									else if upload.mimetype && upload.mimetype.indexOf('/') !== -1
										span.label.label-default(style="float: right")= mimeTypes.extension(upload.mimetype)
			
			//- Motivation
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-pencil(style="margin-right: 0.25em")
					span= __("motivation")
				.panel-body
					if !student.reasonForStudying
						div.alert.alert-danger= __("error.noReasonForStudying")
					else
						p= '"' + student.reasonForStudying + '"'
			
			//- Details
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-blackboard(style="margin-right: 0.25em")
					span= __("details:Details")
				.panel-body
					table.table.table-hover.table-condensed#details
						thead
							tr
								th Field
								th Value
						
						- var keys = Object.keys(student)
						each key in keys
							if(!keysNotRendered[key])
								+display(key)
			
		.col-sm-4
			//- Country
			if country
				.panel.panel-default
					.panel-heading: h2
						span.glyphicon.glyphicon-globe(style="margin-right: 0.25em")
						span= country.name
					.panel-body
						.text-center
							img(src="http://flags.fmcdn.net/data/flags/small/" + country.alpha2.toLowerCase() + ".png")
						
						h4 Visa
						if country.visaEasy
							.alert.alert-info= __("lowRiskCountry")
						else
							.alert.alert-danger= __("highRiskCountry")
						
						h4 Currencies
						ul.list-group
							each currency in country.currencies
								li.list-group-item= currency
						
						h4 Languages
						ul.list-group
							each language in country.languages
								li.list-group-item= language
			
			- var currentStageReached = false;
			
			mixin stage(title, stageName)
				- var saveStage = `javascript:saveStage('${student.email}', '${stageName}');`;
				if student.stage === stageName
					li.list-group-item
						.glyphicon.glyphicon-refresh(style="margin-right: 0.25em")
						span= title
					- currentStageReached = true
				else if currentStageReached || student.stage === "declined" || student.stage === "canceled"
					li.list-group-item
						a.stage-link(href=saveStage)
							.glyphicon.glyphicon-asterisk(style="margin-right: 0.25em")
							span= title
				else
					li.list-group-item.list-group-item-success
						a.stage-link(href=saveStage)
							.glyphicon.glyphicon-ok(style="margin-right: 0.25em")
							span= title
			
			//- Stage
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-list(style="margin-right: 0.25em")
					span= __("progress")
				.panel-body
					ul.list-group
						each stage, index in __("stageList")
							if (index !== "declined" && index !== "canceled")
								+stage(stage, index)
					
					ul.list-group
						+stage(__("stageList.canceled"), "canceled")
					
					ul.list-group
						+stage(__("stageList.declined"), "declined")
			
			//- Money
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-yen(style="margin-right: 0.25em")
					span= __("finances")
				
				.panel-body
					ul.list-group
						each key in Object.keys(student.financialSupportPerMonth)
							li.list-group-item
								if key != "total"
									span= __(`financialSupportPerMonth.${key}`)
								else
									span &nbsp;
								span.label.label-default(style="float: right")= student.financialSupportPerMonth[key] + " Â¥"
			
			//- Family
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-home(style="margin-right: 0.25em")
					span Family
				.panel-body
					if student.familyMembers.length === 0
						div.alert.alert-danger= __("error.noFamilyMembers")
					else
						ul.list-group
							each member in student.familyMembers
								li.list-group-item
									span= member.name
									span.label.label-info(style="float: right")= member.relation
			
			//- Financial supporters
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-credit-card(style="margin-right: 0.25em")
					span= __("financialSupportersTitle")
				.panel-body
					if student.financialSupporters.length === 0
						div.alert.alert-danger= __("error.noFinancialSupporters")
					else
						ul.list-group
							each member in student.financialSupporters
								li.list-group-item= member.name
			
			//- Japanese education
			.panel.panel-default
				.panel-heading: h2
					span.glyphicon.glyphicon-blackboard(style="margin-right: 0.25em")
					span= __("japaneseEducationTitle")
				.panel-body
					ul.list-group
						if student.jlptLevel
							h2(style="text-align: center")= student.jlptLevel
						else if student.japaneseEducation.length === 0
							div.alert.alert-info= __("error.noJapaneseEducationOrJLPT")
						
						each education in student.japaneseEducation
							li.list-group-item= education.institution + " (" + education.totalHours + ")"